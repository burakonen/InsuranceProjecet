@model Tuple<InsuranceProject.Areas.Admin.Model.IndexWM, InsuranceProject.Areas.Admin.Model.CategoryModel, InsuranceProject.Areas.Admin.Model.PageImageModel>

@{
    ViewData["Title"] = "InsurancePolicy";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            responsive: true,
            language: {

            },
            "oLanguage": { "sSearch": "" },
            "language": {
                "searchPlaceholder": "Ara",
                "paginate": {
                    "next": '<i class="fa fa-fw fa-long-arrow-right">',
                    "previous": '<i class="fa fa-fw fa-long-arrow-left">',

                }
            }
        });
    });

</script>

<div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
    <div class="app-header header-shadow">
        <div class="app-header__logo">
            <div class="logo-src"></div>
            <div class="header__pane ml-auto">
                <div>
                    <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <div class="app-header__mobile-menu">
            <div>
                <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
        <div class="app-header__menu">
            <span>
                <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                    <span class="btn-icon-wrapper">
                        <i class="fa fa-ellipsis-v fa-w-6"></i>
                    </span>
                </button>
            </span>
        </div>   
        <div class="app-header__content">
            
            <div class="app-header-right">
                <div class="header-btn-lg pr-0">
                    <div class="widget-content p-0">
                        <div class="widget-content-wrapper">
                            <div class="widget-content-left">
                                <div class="btn-group">
                                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                        <img width="42" class="rounded-circle" src="assets/images/avatars/1.jpg" alt="">
                                        <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                    </a>
                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                        <button type="button" tabindex="0" class="dropdown-item">User Account</button>
                                        <button type="button" tabindex="0" class="dropdown-item">Settings</button>
                                        <h6 tabindex="-1" class="dropdown-header">Header</h6>
                                        <button type="button" tabindex="0" class="dropdown-item">Actions</button>
                                        <div tabindex="-1" class="dropdown-divider"></div>
                                        <button type="button" tabindex="0" class="dropdown-item">Dividers</button>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-content-left  ml-3 header-user-info">
                                <div class="widget-heading">
                                    <span class="own">Gökhan Sarılar</span>
                                </div>
                                <div class="widget-subheading">
                                    BMG Sigorta - CEO
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="app-main">
        <div class="app-sidebar sidebar-shadow">

            <div class="modal fade" id="categoryModal" data-backdrop="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Sigorta Adını Düzenle</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body" id="form-modal-body">
                            <form asp-area="admin" asp-controller="admin" asp-action="addnewcategory" method="post">
                                @foreach (var item in Model.Item1.CategoriesAndInsuranceList)
                                {
                                    <input type="hidden" class="form-control" asp-for="@item.GroupId" name="groupId">
                                }
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kategori Adı</label>
                                    <input class="form-control" asp-for="@Model.Item2.Name">
                                    <span asp-validation-for="@Model.Item2.Name" class="validation"></span>
                                    <small id="emailHelp" class="form-text text-muted"></small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Kategori Resmi</label>
                                    <small id="emailHelp" class="form-text text-muted">Kategori resmi opsiyonel bilgidir. Zorunlu bir alan değildir.</small>
                                    <input type="file" name="file" class="form-control-file" id="">
                                </div>
                                <div class="footer-m">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

            <div class="scrollbar-sidebar">
                <div class="app-sidebar sidebar-shadow">
                    <div class="scrollbar-sidebar">
                        <div class="app-sidebar__inner">
                            <div class="group-dv">
                                <ul class="vertical-nav-menu">

                                    <li class="app-sidebar__heading">Bireysel</li>
                                    <li>
                                        <a class="cat bg-dark">
                                            <i class="metismenu-icon pe-7s-diamond"></i>
                                            <span class="ct"> Kategoriler</span>
                                            <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                        </a>

                                        <ul>
                                            <li>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-name="@Model.Item1.IndividualGroup.GroupName" class="new-cat">
                                                    <span class="nw-ct">
                                                        Kategorileri Düzenle
                                                    </span>
                                                </a>
                                            </li>
                                            @foreach (var item in Model.Item1.CategoriesAndInsuranceList)
                                            {
                                                <li>
                                                    <a href="#" class="cat-name">
                                                        <i class="metismenu-icon pe-7s-diamond"></i>
                                                        <span class="cat-n"> @item.Name</span>
                                                        <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                                    </a>
                                                    <ul class="cat-ul">
                                                        <li class="cat-li">
                                                            <a class="add-pol" asp-area="Admin" asp-controller="Admin" asp-action="CreateInsurance" asp-route-name="@item.Name">
                                                                <span>Poliçe Ekle </span>
                                                            </a>
                                                        </li>
                                                        @foreach (var items in item.InsuranceListName)
                                                        {
                                                            <li class="cat-li">
                                                                <a asp-area="Admin" asp-controller="Admin" asp-action="InsurancePolicy" asp-route-url="@items.Url">
                                                                    <span>@items.Name</span>
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>


                                            }
                                        </ul>
                                    </li>
                                    <div class="cat-bor"></div>
                                    <li class="app-sidebar__heading">Kurumsal</li>
                                    <li>
                                        <a href="#" class="cat bg-dark">
                                            <i class="metismenu-icon pe-7s-diamond"></i>
                                            <span class="ct"> Kategoriler</span>
                                            <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                        </a>

                                        <ul>
                                            <li>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-name="@Model.Item1.CorporateGroup.GroupName" class="new-cat">
                                                    <span class="nw-ct">
                                                        Kategorileri Düzenle
                                                    </span>
                                                </a>
                                            </li>
                                            @foreach (var item in Model.Item1.CorporatecategoryGroups)
                                            {
                                                <li>
                                                    <a href="#" class="cat-name">
                                                        <i class="metismenu-icon pe-7s-diamond"></i>
                                                        <span class="cat-n"> @item.Name</span>
                                                        <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                                    </a>
                                                    <ul>
                                                        <li class="cat-li">
                                                            <a class="add-pol" asp-area="Admin" asp-controller="Admin" asp-action="CreateInsurance" asp-route-name="@item.Name">
                                                                <span>Poliçe Ekle </span>
                                                            </a>
                                                        </li>
                                                        @foreach (var items in item.InsuranceListName)
                                                        {
                                                            <li class="cat-li">
                                                                <a asp-area="Admin" asp-controller="Admin" asp-action="InsurancePolicy" asp-route-url="@items.Url">
                                                                    <span>@items.Name</span>
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>


                                            }
                                        </ul>
                                    </li>

                                </ul>
                            </div>
                            <div class="log-gr">
                                <a href="/account/logout" class="log" id="lg">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
        <div class="app-main__outer">
            <div class="app-main__inner">
                <div class="app-page-title">
                    <div class="page-title-wrapper">
                        <div class="page-title-heading">
                            <div class="page-title-icon">
                                <i class="pe-7s-car icon-gradient bg-mean-fruit">
                                </i>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="dashboard-text">@Model.Item1.InsuranceLists.Name Yönetim Sayfası</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row ins-r">
                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">
                            <h2>Poliçe Bilgileri</h2>
                        </a>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" data-backdrop="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Sigorta Adını Düzenle</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body" id="form-modal-body">
                                    <form asp-area="admin" asp-controller="admin" asp-action="InsurancePolicyNameEdit" method="post">
                                        <div class="form-group">
                                            <label class="label-g" for="exampleInputEmail1">Sigorta Adı</label>
                                            <input type="text" class="form-control" asp-for="@Model.Item1.InsuranceLists.Name">
                                            <span asp-validation-for="@Model.Item1.InsuranceLists.Name" class="validation"></span>
                                            <input type="hidden" class="form-control" name="insuranceId" value="@Model.Item1.InsuranceLists.Id">
                                        </div>

                                        <div class="btns">
                                            <button type="submit" class="btn btn-dark">Kaydet</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" asp-area="admin" asp-controller="admin" asp-action="InsurancePolicyGuaranteeNameEdit" asp-route-url="@Model.Item1.InsuranceLists.SEOURL">
                            <h2>Teminat Bilgileri</h2>
                        </a>
                    </div>
                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" asp-area="admin" asp-controller="admin" asp-action="InsurancePolicyPageDescrition" asp-route-url="@Model.Item1.InsuranceLists.SEOURL">
                            <h2>Sayfa Açıklaması</h2>
                        </a>
                    </div>

                </div>
                <div class="row ins-r mt-3">
                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" data-toggle="modal" data-target="#pageImageModal">
                            <h2>Sayfa Resmi</h2>
                        </a>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="pageImageModal" data-backdrop="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Sayfa Resmini Düzenle</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body" id="form-modal-body">
                                    <form asp-area="admin" asp-controller="admin" asp-action="InsurancePolicyPageImageEdit" method="post" enctype="multipart/form-data">
                                        @foreach (var item in Model.Item1.InsuranceLists.PageImages)
                                        {
                                            <div class="form-group">
                                                <img src="~/@item.Name" class="pgi" />
                                                <input class="image-input form-control-file" type="file" asp-for="@Model.Item3.PageImage" />
                                                <div>
                                                    <span asp-validation-for="@Model.Item3.PageImage" class="validation"></span>
                                                </div>
                                                <input type="hidden" name="pageImageId" value="@item.Id" />
                                            </div>

                                            <div class="btns">
                                                <button type="submit" class="btn btn-dark">Kaydet</button>
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                            </div>
                                        }
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" asp-area="admin" asp-controller="admin" asp-action="InsurancePolicyFaqs" asp-route-url="@Model.Item1.InsuranceLists.SEOURL">
                            <h2>Sık Sorulanlar</h2>
                        </a>
                    </div>
                    <div class="col-lg-3 ins-inf">
                        <a class="btn btn-dark" data-toggle="modal" data-target="#seoModal" id="seo-id" data-id="@Model.Item1.InsuranceLists.Id">
                            <h2>Seo</h2>
                        </a>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="seoModal" data-backdrop="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Seo Düzenlenme Ekranı</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body" id="form-modal-body">
                                    <form asp-area="admin" asp-controller="admin" asp-action="InsurancePolicySeo" method="post" name="formSeo" id="formSeo">
                                        <div class="form-group">
                                            <label class="label-g">Anahtar Değer</label>
                                            <input value="@Model.Item1.InsuranceLists.SEOURL" name="seoValue" class="form-control seo-value" />
                                            <input type="hidden" name="seoId" value="@Model.Item1.InsuranceLists.Id" />
                                        </div>

                                        <div class="btns">
                                            <button type="submit" class="btn btn-dark">Kaydet</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row" style="margin:0">

                    <div class="d-xl-none d-lg-block col-md-6 col-xl-4">
                        <div class="card mb-3 widget-content bg-premium-dark">
                            <div class="widget-content-wrapper text-white">
                                <div class="widget-content-left">
                                    <div class="widget-heading">Products Sold</div>
                                    <div class="widget-subheading">Revenue streams</div>
                                </div>
                                <div class="widget-content-right">
                                    <div class="widget-numbers text-warning"><span>$14M</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row all-info-row">
                    <div class="col-md-11 col-lg-11">
                        <div class="info-div">
                            <h2 class="all-us">@Model.Item1.InsuranceLists.Name Kullanıcı Bilgileri</h2>
                            <div class="buttons">
                                <form asp-area="Admin" asp-controller="Admin" asp-action="ExportToExcellUsers" method="post">
                                    <button class="btn btn-light " id="userId" type="submit">
                                        <i class="fa-solid fa-file-arrow-down"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <table class="table table-striped table-responsive-sm" id="myTable">
                            <thead class="bg-dark text-white">
                                <tr>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Soy isim</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Kimlik No</th>
                                    <th scope="col">Cep No</th>
                                    <th scope="col">Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item1.InsuranceListUsers)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.TCKN</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Date.ToString("dddd, MMMM d, yyyy");</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


