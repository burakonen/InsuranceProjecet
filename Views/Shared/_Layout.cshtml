@using Newtonsoft.Json;
@using InsuranceProject.DataMethods;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsuranceProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500;700;800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/lib/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/sweetalert2.min.js"></script>
</head>
<body>


    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - InsuranceProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @if (TempData["AlertMessage"] != null)
    {
        var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["AlertMessage"] as string);


        <script>

            Swal.fire({
                    showConfirmButton: false,
                    icon: "success",
                    html: '@message.Message ',
                    customClass: {
                        container: 'container-class',
                        popup: 'popup-class',
                        header: 'header-class',
                        className: "myClass",
                        title: 'title-class',
                        icon: 'icon-class',
                        image: 'image-class',
                        content: 'content-class',
                        input: 'input-class',
                        actions: 'actions-class',
                        footer: 'footer-class',

                    }


                });

        </script>

    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
