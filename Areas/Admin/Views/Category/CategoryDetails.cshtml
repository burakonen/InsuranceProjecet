                                  <table class="table table-striped" id="myTable">
                                      <thead class="bg-dark text-white">
                                          <tr>
                                              <th scope="col">Id</th>
                                              <th scope="col">Sigorta Adı</th>
                                              <th scope="col">Eklenme Tarihi</th>
                                              <th scope="col">Kategori Adı</th>
                                              <th scope="col"></th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                          @foreach (var item in Model.Item1.CategoriesInsurunceList)
                                          {

                                              @foreach (var items in item.InsuranceList)
                                              {
                                                  <tr>
                                                      <td>@items.Id</td>
                                                      <td>@items.Name</td>
                                                      <td>@items.Date.ToString("dddd, MMMM d, yyyy");</td>
                                                      <td>@items.Category.Name</td>
                                                      <td class="t-t">
                                                          <a asp-area="Admin" asp-controller="Admin" asp-action="InsurancePolicy" asp-route-url="@items.SEOURL" class="btn btn-dark all-button" type="button" id="">Görüntüle</a>
                                                          <button class="btn btn-secondary all-button" data-id="@items.Id" type="button" id="insurunceId" data-toggle="modal" data-target="#insurunceModalId">Düzenle</button>
                                                          <button class="btn btn-light all-button" data-id="" id="deleteInsurance">Sil</button>
                                                      </td>
                                                  </tr>
                                              }

                                          }
                                      </tbody>
                                  </table>
                              </div>
                      </div>
              </div>
        </div>
