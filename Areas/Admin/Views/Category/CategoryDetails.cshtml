</div>





<script>
    $(document).on("click", "#insurunceId", function () {
        var passedID = $(this).data('id');
        $(".modal-body .hiddenInsurunceId").val(passedID);
    });

</script>


<script type="text/javascript">

    $(function () {
        $("tbody").on("click", "#insurunceId", function () {

            let btn = $(this);
            let id = btn.data("id");
            $.ajax({
                type: "GET",
                dataType: "json",
                url: "/admin/category/getinsuruncenamefromcategory/" + id,
                success: function (data) {
                    let parseData = JSON.parse(data);
                    console.log(parseData);

                    let value = "";
                    value += `${parseData.Name}`;

                    $(".ins-val").val(value);




                }
            });

        });
    });



</script>



<script>


    $(function () {
        $("tbody").on("click", "#deleteInsurance", function () {
            var btn = $(this);
            bootbox.confirm("<h5>Silmek istediğinize emin misiniz?</h5>", function (result) {
                if (result) {
                    var id = btn.data("id");
                    console.log(id);
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Category/deleteInsurance/" + id,
                        success: function () {
                            btn.parent().parent().remove();

                        },

                    });

                };

            });

        });
    });




</script>


